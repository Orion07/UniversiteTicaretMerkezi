<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.utm.miragessee.universiteticaretmerkezi.DetailActivity">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="E-Mail Adresi"
            android:layout_below="@+id/txtLastName"
            android:layout_alignRight="@+id/txtLastName"
            android:layout_alignEnd="@+id/txtLastName"
            android:drawableLeft="@drawable/email"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword"
            android:layout_below="@+id/txtEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnShow"
            android:layout_toStartOf="@+id/btnShow"
            android:password="false"
            android:hint="Şifre"
            android:maxLength="15"
            android:drawableLeft="@drawable/password"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Göster"
            android:id="@+id/btnShow"
            android:layout_below="@+id/txtEmail"
            android:layout_alignRight="@+id/txtEmail"
            android:layout_alignEnd="@+id/txtEmail"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtRePassword"
            android:layout_below="@+id/btnShow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnShow"
            android:layout_alignEnd="@+id/btnShow"
            android:hint="Şifre (Tekrar)"
            android:maxLength="15"
            android:drawableLeft="@drawable/password"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtPhone"
        android:layout_below="@+id/txtRePassword"
        android:layout_alignRight="@+id/txtRePassword"
        android:layout_alignEnd="@+id/txtRePassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Telefon(Basinda 0 olmadan yaziniz)"
        android:maxLength="14"
        android:drawableLeft="@drawable/phone"/>

</RelativeLayout>
