<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utm.miragessee.universiteticaretmerkezi.AnaActivity">

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff0f0f0"
        android:gravity="center" >

        <Button android:layout_gravity="fill_vertical"
            android:id="@+id/detailButton"
            android:layout_width="150dip"
            android:layout_height="48.0dip"
            android:text="Detaylandır"
            android:layout_weight="0.5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="457dp" />

        <View android:layout_gravity="center_vertical"
            android:background="#2672EC"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="457dp"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="4.0dip" />

        <Button android:ellipsize="end"
            android:layout_gravity="fill_vertical"
            android:id="@+id/sortButton"
            android:layout_width="150dip"
            android:layout_height="48.0dip"
            android:text="Sırala"
            android:layout_weight="0.5"
            android:layout_marginTop="457dp"
            android:layout_marginLeft="200dp" />

        <ScrollView
            android:id="@+id/scrollableContents"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFF"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="65dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="445dp"
                    android:id="@+id/listView"
                    android:layout_gravity="left|top"
                    android:choiceMode="singleChoice" />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <!-- Scrollable Item below header and above footer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#1d1d1d"/>

</android.support.v4.widget.DrawerLayout>
