<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableRow>
        <ImageView
            android:id="@+id/img"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:paddingRight="5.0dip"
            android:src="@drawable/ev"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:orientation="vertical"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1d1d1d"
            android:text="İNANLAR İNŞAAT TERRACE MİX SATIŞ OFİSİNDEN 1+0 KİRALIK DAİRE" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@+id/linear1"
            android:padding="10dp">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1d1d1d"
            android:text="İstanbul, Esenyurt, Namık Kemal"
            android:layout_above = "@+id/txt"
            android:layout_toRightOf="@+id/txt3"
            android:layout_toEndOf="@+id/txt3"
            android:drawableLeft="@drawable/user"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2672EC"
            android:text="₺650"
            android:layout_gravity="right" />
        </LinearLayout>
        </LinearLayout>
    </TableRow>
</TableLayout>