<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:paddingRight="5.0dip"
            android:src="@drawable/ev"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:orientation="vertical"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1d1d1d"
            android:text="İNANLAR İNŞAAT TERRACE MİX SATIŞ OFİSİNDEN 1+0 KİRALIK DAİRE" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#1d1d1d"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="İstanbul, Esenyurt, Namık Kemal"
                android:layout_above = "@+id/txt"
                android:layout_toRightOf="@+id/txt3"
                android:layout_toEndOf="@+id/txt3"
                android:layout_gravity="bottom"
                android:drawableLeft="@drawable/user"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#2672EC"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="₺650"
                android:layout_toRightOf="@+id/txt"
                android:layout_toEndOf="@+id/txt"
                android:layout_gravity="right" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout >